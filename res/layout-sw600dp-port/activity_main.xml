<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/avitaslogo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="100dp"
        android:paddingRight="100dp" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/edit_box_background"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/user"
            android:hint="Username"
            android:padding="8dp"
            android:singleLine="true"
         />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/edit_box_background"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/pass"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
          />

        <TextView
            android:id="@+id/facility_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/submit_button"
            android:drawablePadding="5dp"
            android:hint="Tap to select facility"
            android:padding="8dp"
            android:textColor="#467A8F" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facility_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#347AB6"
            android:gravity="center"
            android:padding="6dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>
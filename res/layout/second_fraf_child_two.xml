<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/ans_lay"
    android:layout_gravity="center_vertical"
    android:background="@color/answer_background"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/good_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/green_two"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/very_poor" />

        <TextView
            android:id="@+id/sad_text_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/green_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Very Difficult!"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/good_lay"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/sad_question"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_box_background"
            android:hint="What speciality/service you were looking for?"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/sad_question"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/button_next"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/ans_lay"
    android:layout_gravity="center_vertical"
    android:background="@color/answer_background"
    android:clickable="true"
    android:gravity="center_vertical"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/good_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/red_smiley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no" />

        <TextView
            android:id="@+id/sad_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="No"
            android:textColor="#006BB6"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/good_lay"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp" >

        <EditText
            android:id="@+id/sad_question"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/edit_box_background"
            android:hint="What speciality/service you were looking for?"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sad_question"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/button_next"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
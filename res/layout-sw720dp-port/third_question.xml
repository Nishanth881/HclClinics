<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="25dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:text="3. How would you rate us on your waiting time?"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ans_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/question"
                android:layout_marginTop="15dp"
                android:background="@color/answer_background"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:weightSum="3" >

                <RelativeLayout
                    android:id="@+id/effortless_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/green"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/excellence" />

                    <TextView
                        android:id="@+id/effort_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/green"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:text="Great!"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/satisfactory_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/yelow"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/average" />

                    <TextView
                        android:id="@+id/satisfy_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/yelow"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:text="Ok!"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/difficult_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/red_smiley"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/very_poor" />

                    <TextView
                        android:id="@+id/sad_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/red_smiley"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:text="Not Good!"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ans_lay"
                android:gravity="center_horizontal"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/sad_question_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/sad_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:singleLine="true"
                        android:text="How would you rate us on your waiting time?"
                        android:textColor="@color/black"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                    
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/answer_sad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sad_question_lay"
                    android:layout_marginTop="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/ans_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Registration"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ans_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/ans_six"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Billing"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ans_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/ans_five"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Waiting For The Doctor"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ans_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/ans_one"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Doctor Consultation"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/answer_sad_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/answer_sad"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/ans_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Nurse Interaction"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ans_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/ans_three"
                        android:drawableLeft="@drawable/unchecked"
                        android:drawablePadding="5dp"
                        android:text="Others"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/answer_sad_two"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/button_back"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:src="@drawable/back" />

                    <ImageView
                        android:id="@+id/button_next"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:src="@drawable/next" />
                </LinearLayout>
                
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>